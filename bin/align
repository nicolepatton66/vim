#!/usr/bin/env ruby

opt = ARGV.shift
if opt == '-a'
  SPLIT_REGEX = /\s+/
  JOIN_CHAR = ' '
elsif opt == '-e'
  SPLIT_REGEX = /=/
  JOIN_CHAR = '='
end

leader = nil
tokenized_lines = []
max_sizes = []

ARGF.each_with_index do |line, line_no|
  line.chomp!.sub!(/^(\s*)/, '')
  leader = $1 if leader.nil?
  tokenized_lines[line_no] = line.split(SPLIT_REGEX)
  tokenized_lines[line_no].each_with_index do |token, col_num|
    max_sizes[col_num] = token.length if token.length >= (max_sizes[col_num] || 0)
  end
end

tokenized_lines.each_with_index do |tokens, line_no|
  tokens.each_with_index do |token, col_num|
    tokenized_lines[line_no][col_num] << ' ' * (max_sizes[col_num] - token.length)
  end
  puts "#{leader}#{tokenized_lines[line_no].join(JOIN_CHAR)}".sub(/\s+$/, '')
end
